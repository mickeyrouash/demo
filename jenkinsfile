#!groovy

pipeline {
    environment {
        JAVA_TOOL_OPTIONS = "-Duser.home=/var/maven/"
    }
    agent {
        docker {
            image "maven:3.6.0-jdk-13"
            //label "docker"
            args "-v /tmp/maven:/var/maven/.m2 -e MAVEN_CONFIG=/var/maven/.m2"
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git changelog: false, poll: false, url: 'https://github.com/mickeyrouash/simple-java-maven-app', branch: 'master'
               
            }
        }
        stage("Build") {
            steps {
               // sh "ssh -V"
                sh "mvn -version"
                sh "mvn clean install"
            }
        }
    }

   
}